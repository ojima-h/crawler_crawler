$ ->
  selected     = $('#source_crawler_strategy option:selected').first().text()
  $('#source_crawler_params_' + selected).show()

  $('#source_crawler_strategy').change ->
    selected     = $('#source_crawler_strategy option:selected').first().text()
    $('#source_crawler_params div').hide()
    $('#source_crawler_params_' + selected).show()
    